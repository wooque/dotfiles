#!/usr/bin/bash
sleep 0.05
row=$(swaymsg -t get_tree | jq  -r '
    ..
    | objects
    | select(.type == "workspace") as $ws
    | ..
    | objects
    | select(has("app_id"))
    | (if .focused == true then "*" else " " end) as $asterisk
    | "[\($ws.num)] \($asterisk) \(.app_id) | \(.name) | <\(.id)>"' \
| fuzzel -d -w 60)

if [ ! -z "$row" ]
then
    winid=$(echo "$row" | sed 's/.*<\([0-9]*\)>.*/\1/')
    swaymsg "[con_id=$winid] focus"
fi
